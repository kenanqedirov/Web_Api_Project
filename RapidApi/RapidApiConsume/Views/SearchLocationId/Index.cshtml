@model List<BookingApiLocationSearchViewModel>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    @using (Html.BeginForm("Index", "SearchLocationId" ,FormMethod.Post))
    {
        <label>City Name</label>
        <input type="text" name="dest_id" class="form-control" />
        <br />
        <button class="btn btn-outline-primary">Search Id from city</button>
    }
    <table class="table table-bordered">
        <tr>
            <th>Location</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.dest_id</td>
            </tr>
        }
    </table>
    <br />
    <a href="/BookingByCity/Index/" class="btn btn-success">New hotel reservation detail</a>
</div>
