@model HotelProject.WebUI.Models.Setting.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Profile Update</h1>

<form method="post">
    <label>Name</label>
    <input type="text" class="form-control" asp-for="Name"/>
    <span asp-validation-for="Name"></span>
    <br />

    <label>Surname</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <span asp-validation-for="Surname"></span>
    <br />

    <label>Username</label>
    <input type="text" class="form-control" asp-for="Username" readonly/>
    <span asp-validation-for="Username"></span>
    <br />

    <label>Email</label>
    <input type="text" class="form-control" asp-for="Email" />
    <span asp-validation-for="Email"></span>
    <br />

    <label>Password</label>
    <input type="text" class="form-control" asp-for="Password" />
    <span asp-validation-for="Password"></span>
    <br />

    <label>Confirm Password</label>
    <input type="text" class="form-control" asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword"></span>
    <br />

    <button class="btn btn-outline-success">Update Profile</button>
</form>