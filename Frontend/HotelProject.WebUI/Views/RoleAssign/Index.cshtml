@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>User List</h1>


<div class="table-responsive">
    <table class="table table-xs mb-0">
        <thead>
            <tr>
                <th>Users</th>
                <th>Add Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                   <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-success">Add Role</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>