@model List<HotelProject.WebUI.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Assign Role Page</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId">
            <input type="hidden" asp-for="@Model[i].RoleName">
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input">
            <label class="form-check-label" asp-for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
        <br />
    }
    <br />
    <button class="btn btn-success">Update Role</button>
</form>