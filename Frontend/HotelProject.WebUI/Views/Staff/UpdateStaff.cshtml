@model UpdateStaffViewModel

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Update Staff Page</h1>

<form method="post">
    <input type="hidden" asp-for="StaffId"/>
    <label>Staff Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    <label>Staff Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />

    <label>Social Media 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <br />

    <label>Social Media 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <br />

    <label>Social Media 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <br />

    <button class="btn btn-success">Update Staff</button>
</form>