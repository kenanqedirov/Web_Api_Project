@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Guest Name</th>
        <th>Guest Surname</th>
        <th>City</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a href="/Guest/DeleteGuest/@item.GuestId" onclick="return confirm('Are you want Delete?')" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Guest/UpdateGuest/@item.GuestId" class="btn btn-outline-primary">Update</a></td>
        </tr>
    }
</table>
<a href="/Guest/AddGuest/" class="btn btn-success">Add Guest</a>
