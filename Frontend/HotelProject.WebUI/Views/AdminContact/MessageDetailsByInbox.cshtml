@model InboxContactDto

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>MessageDetails</h1>



<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage" class="btn btn-primary btn-block">Compose</a>
    @await Html.PartialAsync("SidebarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Categories</h5>
    @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                Inbox messages <span class="caret m-l-5"></span>
            </button>
        </div>
    </div>

    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="images/avatar/1.jpg">
            <div class="media-body">
                <h5 class="m-b-3">@Model.Name</h5>
                <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MM-yyyy"))</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Sender:@Model.Mail,invernessmckenzie@example.com</small>
            </div>
        </div>
        <h5 class="m-b-15">Hi,Ingredia,</h5>
        <p>
            @Model.Message
        </p>
    </div>
</div>


