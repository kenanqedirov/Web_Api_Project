@model List<HotelProject.WebUI.Dtos.AppUserDto.ResultAppUserListDto>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>UserList</h1>

<div class="table-responsive">
    <table class="table table-xs mb-0">
        <thead>
            <tr>
                <th>Users</th>
                <th>City</th>
                <th>Country</th>
                <th>Status</th>
                <th>Gender</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                    <td>@item.City</td>
                    <td>
                        <span>@item.Country</span>
                    </td>
                    @if (item.Gender == "Male")
                    {
                        <td>
                            <div>
                                <div class="progress" style="height: 6px">
                                    <div class="progress-bar bg-success" style="width: 100%"></div>
                                </div>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td>
                            <div>
                                <div class="progress" style="height: 6px">
                                    <div class="progress-bar bg-warning" style="width: 100%"></div>
                                </div>
                            </div>
                        </td>
                    }
                  
                    @if (item.Gender == "Male")
                    {
                        <td><i class="fa fa-circle-o text-success  mr-2"></i>Male</td>
                    }
                    else
                    {
                        <td><i class="fa fa-circle-o text-warning  mr-2"></i>Female</td>
                    }                   
                </tr>
            }
        </tbody>
    </table>
</div>
