@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table success-table-bordered">
    <tr>
        <th>#</th>
        <th>Role Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-outline-info">Update</a></td>
        </tr>
    }
</table>

<a href="/Role/AddRole/" class="btn btn-outline-success">New Role</a>